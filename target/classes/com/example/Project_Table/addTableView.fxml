<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" prefHeight="407.0" prefWidth="288.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Project_Table.controller.AddTableView">
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>

   <HBox spacing="5">
      <Label text="Nom de la table :" />
      <TextField fx:id="textFieldTableName" promptText="Saisir la valeur" />
   </HBox>

   <VBox fx:id="container" prefHeight="317.0" prefWidth="249.0" spacing="6">
      <Label text="Nom des colonnes :" />
      <children>
         <TextField fx:id="textField1" />
         <TextField fx:id="textField2" />
         <TextField fx:id="textField3" />
         <TextField fx:id="textField4" />
         <TextField fx:id="textField5" />
         <TextField fx:id="textField6" />
         <TextField fx:id="textField7" />
         <TextField fx:id="textField8" />
         <TextField fx:id="textField9" />
         <TextField fx:id="textField10" />
      </children>
   </VBox>
   <HBox prefHeight="100.0" prefWidth="200.0" spacing="5">
      <children>
         <Label text="Nombre de ligne :" />
         <TextField fx:id="textFieldNbLigne" />
      </children>
   </HBox>

   <HBox spacing="10">
      <Button fx:id="addButton" onAction="#addTable" text="Ajouter" />
      <Button fx:id="cancelButton" onAction="#cancelAddTable" text="Annuler" />
   </HBox>
</VBox>
